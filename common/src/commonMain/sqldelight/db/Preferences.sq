CREATE TABLE preferences (
    id INTEGER NOT NULL PRIMARY KEY DEFAULT 0,
    nativeLanguage TEXT NOT NULL,
    targetLanguage TEXT NOT NULL
);

select:
SELECT nativeLanguage, targetLanguage FROM preferences;

set:
REPLACE INTO preferences (id, nativeLanguage, targetLanguage) VALUES (0, ?, ?);

setNativeLanguage:
UPDATE preferences SET nativeLanguage = ?;

setTargetLanguage:
UPDATE preferences SET targetLanguage = ?;